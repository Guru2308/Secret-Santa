# Database Configuration
# For local development (non-Docker):
# DB_CONN=host=localhost user=postgres password=yourpassword dbname=secretsanta port=5432 sslmode=disable
# For Docker: This will be overridden by docker-compose.yml
DB_CONN=host=localhost user=postgres password=postgres dbname=secretsanta port=5432 sslmode=disable

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=your-redirect-url

# Security: Generate with: openssl rand -base64 32
SESSION_SECRET=REPLACE_WITH_RANDOM_SECRET

# Set to "development" to disable HTTPS enforcement locally
# Set to "production" for deployment
ENVIRONMENT=development
